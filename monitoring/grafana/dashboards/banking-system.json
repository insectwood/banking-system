{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Transfer Success / Fail Count",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "increase(banking_transfer_total{result=\"success\"}[5m])",
          "legendFormat": "Success",
          "refId": "A"
        },
        {
          "expr": "increase(banking_transfer_total{result=\"fail\"}[5m])",
          "legendFormat": "Fail",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed" },
          "custom": { "lineWidth": 2, "fillOpacity": 20 }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "Success" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "Fail" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "Transfer Success Rate (%)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "increase(banking_transfer_total{result=\"success\"}[1h]) / (increase(banking_transfer_total{result=\"success\"}[1h]) + increase(banking_transfer_total{result=\"fail\"}[1h])) * 100",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0, "max": 100, "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 90 },
              { "color": "green", "value": 95 }
            ]
          }
        }
      }
    },
    {
      "title": "Transfer Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(banking_transfer_duration_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(banking_transfer_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(banking_transfer_duration_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "lineWidth": 2 } }
      }
    },
    {
      "title": "HTTP Request Rate (per second)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{application=\"core-banking\"}[1m])",
          "legendFormat": "{{method}} {{uri}} [{{status}}]",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "lineWidth": 1, "fillOpacity": 10 } }
      }
    },
    {
      "title": "API Response Time p95 by Endpoint",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"core-banking\"}[5m]))",
          "legendFormat": "{{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "lineWidth": 2 } }
      }
    },
    {
      "title": "JVM Heap Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\", application=\"core-banking\"} / 1024 / 1024",
          "legendFormat": "Core Banking - {{id}}",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\", application=\"auth-service\"} / 1024 / 1024",
          "legendFormat": "Auth Service - {{id}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "decmbytes", "custom": { "lineWidth": 2, "fillOpacity": 15 } }
      }
    },
    {
      "title": "JVM GC Pause Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum[1m])",
          "legendFormat": "{{application}} - {{cause}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "lineWidth": 2 } }
      }
    },
    {
      "title": "HikariCP DB Connection Pool",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "hikaricp_connections_active{application=\"core-banking\"}",
          "legendFormat": "Active",
          "refId": "A"
        },
        {
          "expr": "hikaricp_connections_idle{application=\"core-banking\"}",
          "legendFormat": "Idle",
          "refId": "B"
        },
        {
          "expr": "hikaricp_connections_pending{application=\"core-banking\"}",
          "legendFormat": "Pending",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 } }
      }
    },
    {
      "title": "System CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "process_cpu_usage{application=\"core-banking\"} * 100",
          "legendFormat": "Core Banking",
          "refId": "A"
        },
        {
          "expr": "process_cpu_usage{application=\"auth-service\"} * 100",
          "legendFormat": "Auth Service",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "custom": { "lineWidth": 2, "fillOpacity": 15 } }
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["banking", "monitoring"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Banking System Dashboard",
  "uid": "banking-system",
  "version": 1
}